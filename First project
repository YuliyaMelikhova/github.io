    <script>
      function subscribe() {
        let firstName = prompt("What is your name?");
        let emailAddress = prompt("What is your e-mail address?");
        let weeklyTips = prompt("Would you like to receive running tips?");
        weeklyTips = weeklyTips.toLowerCase().trim();
        if (weeklyTips === "yes") {
          alert("Thank you, " + firstName + ", for subscribing!üëã");
        } else {
          alert("Have a good day, " + firstName + "üëç ");
        }
      }
      let subscribeButton = document.querySelector("button");
      subscribeButton.addEventListener("click", subscribe);
